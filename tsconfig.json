{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  // Old "moduleResolution": "Node" option required for Cypress
  // https://github.com/cypress-io/cypress/issues/26308#issuecomment-1663592648
  //
  // TODO: Remove when issue is resolved https://github.com/cypress-io/cypress/issues/27448
  "ts-node": {
    "compilerOptions": {
      "module": "ESNext",
      "moduleResolution": "Node",
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}